<Page x:Class="ComputerShop.Catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Catalog">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="15">
            <Button x:Name="btn_Processors" Click="Btn_Processors_Click">Процессоры</Button>
            <Button x:Name="btn_RAM">Оперативная память</Button>
            <Button x:Name="btn_Videocards">Видеокарты</Button>
            <Button x:Name="btn_DataStorage">Накопители данных</Button>
        </StackPanel>

        <Frame x:Name="CatalogItemFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Page>
