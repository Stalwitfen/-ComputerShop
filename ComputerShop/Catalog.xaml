<Page x:Class="ComputerShop.Catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Catalog">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="15" Grid.Row="0">
                <Button x:Name="btn_Processors" Click="Btn_Processors_Click">Процессоры</Button>
                <Button x:Name="btn_RAM" Click="Btn_RAM_Click">Оперативная память</Button>
                <Button x:Name="btn_Videocards" Click="Btn_Videocards_Click">Видеокарты</Button>
                <Button x:Name="btn_DataStorage" Click="Btn_DataStorage_Click">Накопители данных</Button>
            </StackPanel>

            <StackPanel Margin="15" Grid.Row="1" VerticalAlignment="Bottom">
                <Button x:Name="btn_AddProduct" Click="Btn_AddProduct_Click">Добавить запись</Button>
                <Button x:Name="btn_Cart" Click="Btn_Cart_Click">Корзина</Button>
            </StackPanel>
        </Grid>
        
        <Frame x:Name="CatalogItemFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Page>
