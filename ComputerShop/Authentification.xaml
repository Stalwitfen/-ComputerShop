<Page x:Class="ComputerShop.Authentification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerShop"
        mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authentification">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="30">
            <Label Margin="0, 0, 0, 20" Style="{StaticResource LabelStyle}">Авторизация</Label>
            <TextBox x:Name="tb_loginInput" TextAlignment="Center" Margin="5" FontSize="16" Style="{StaticResource TextBoxStyle}">admin</TextBox>
            <TextBox x:Name="tb_passwordInput" TextAlignment="Center" Margin="5" FontSize="16" Style="{StaticResource TextBoxStyle}">admin</TextBox>
            <Button Content="Войти" Width="120px" Margin="20" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>
